#include<iostream>
using namespace std;
class claculator{
    public:
    
    float add(float a,float b){
        return a+b;

    }
    float sub(float a,float b){
        return a-b;

    }
    float multi(float a,float b){
        return a*b;
    }
    float div(float a,float b){
        return a/b;
    }
};
int main(){
    int a,b;
    cout<<"enter the number a:"<<endl;
    cin>>a;
    cout<<"enter the number b:";
    cin>>b;
    claculator s;
    cout<<"addition of two no:"<<s.add(a,b)<<endl;
    cout<<"multiply of two no:"<<s.multi(a,b)<<endl;
    cout<<"divison of two no:"<<s.div(a,b)<<endl;
    cout<<"subraction of two no:"<<s.sub(a,b)<<endl;
    return 0;
}
