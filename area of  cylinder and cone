#include <iostream>
#include <cmath>
using namespace std;


class Shape {
public:
    virtual double area() = 0; 
};

// Cylinder class
class Cylinder : public Shape {
private:
    double radius, height;
public:
    Cylinder(double r, double h) : radius(r), height(h) {}

    double area() override {
        return 2 * M_PI * radius * (radius + height);
    }
};

// Cone class
class Cone : public Shape {
private:
    double radius, height;
public:
    Cone(double r, double h) : radius(r), height(h) {}

    double area() override {
        double slantHeight = sqrt(radius * radius + height * height);
        return M_PI * radius * (radius + slantHeight);
    }
};

int main() {
    double radius, height;
    cout << "Enter the radius: ";
    cin >> radius;
    cout << "Enter the height: ";
    cin >> height;

    Cylinder s(radius, height);
    Cone R(radius, height);

    cout << "Cylinder surface area: " << s.area() << endl;
    cout << "Cone surface area: " << R.area() << endl;

    return 0;
}
