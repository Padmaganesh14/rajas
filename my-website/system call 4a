#include <stdio.h>
#include <dirent.h>
#include <stdlib.h>

struct dirent *dptr;

int main(int argc, char *argv[])
{
    char buff[100];
    DIR *dirp;

    printf("\n\nENTER DIRECTORY NAME: ");
    scanf("%99s", buff);

    dirp = opendir(buff);
    if (dirp == NULL) {
        printf("The given directory does not exist\n");
        exit(1);
    }

    while ((dptr = readdir(dirp)) != NULL) {
        printf("%s\n", dptr->d_name);
    }

    closedir(dirp);
    return 0;
}
