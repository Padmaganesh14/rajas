#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>

int main(int argc, char *argv[]) {
    char buffer[1024];
    int files[2];
    ssize_t count;

    if (argc < 3) {
        fprintf(stderr, "Usage: %s <source_file> <destination_file>\n", argv[0]);
        return 1;
    }

    // Open source file
    files[0] = open(argv[1], O_RDONLY);
    if (files[0] == -1) {
        perror("Error opening source file");
        return 1;
    }

    // Open destination file
    files[1] = open(argv[2], O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (files[1] == -1) {
        perror("Error opening destination file");
        close(files[0]);
        return 1;
    }

    // Copy data
    while ((count = read(files[0], buffer, sizeof(buffer))) > 0) {
        if (write(files[1], buffer, count) != count) {
            perror("Error writing to destination file");
            close(files[0]);
            close(files[1]);
            return 1;
        }
    }

    if (count == -1) {
        perror("Error reading from source file");
    }

    close(files[0]);
    close(files[1]);

    return 0;
}
