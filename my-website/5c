#include <stdio.h>
#include <string.h>

void main() {

    char fn[100], pat[100], temp[200];    
    FILE *fp;

    printf("Enter file name: ");
    scanf("%s", fn);

    printf("Enter pattern to be searched: ");
    scanf("%s", pat);

    fp = fopen(fn, "r");

    if (fp == NULL) {
        printf("Error opening file\n");
        return;
    }

    while (fgets(temp, sizeof(temp), fp)) {
        if (strstr(temp, pat)) {
            printf("%s", temp);
        }
    }

    fclose(fp);
}
